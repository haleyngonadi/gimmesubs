{
  "name": "GimmeSubs",
  "version": "1.1",
  "description": "GimmeSubs is the ultimate resource of English Subtitles for international shows and movies. ",
  "permissions": [
    "browsingData", "activeTab", "notifications", "storage","http://*/*", "https://*/*", "webNavigation",  "*://*/*"
  ],
    "default_locale": "en",
  "browser_action": {
      "default_title": "GimmeSubs",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "icons": { "16": "icon.png",
           "48": "icon.png",
          "128": "icon.png" },
  "manifest_version": 2,

    "omnibox": {
    "keyword": "bpsearch"
  },

  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "background":{"scripts":["app/require-config.js","bower_components/requirejs/require.js", "background.js"],"persistent":false},
    "content_scripts" : [
    {
      "matches" : [
          "http://*.univision.com/novelas/*", "https://*.youtube.com/watch?v=*"
      ],
      "js" : ["subs/read-along.js", "players/univision.js"],
      "css" : ["players/univision.css"],
      "run_at": "document_end"
    },
    {
      "matches" : [
          "http://*.televisa.com/novelas/*"
      ],
      "js" : ["players/televisa.js"]
    },
    {
      "matches" : [
          "http://*.lasestrellas.tv/telenovelas/*"
      ],
      "js" : ["players/lasestrellas.js"]
    },
    {
      "matches" : [
          "http://*.telemundo.com/novelas/*"
      ],
      "js" : ["players/telemundo.js"]
    },
    {
      "matches" : [
          "https://openload.co/*"
      ],
      "js" : ["players/openload.js"]
    }
      

  ]
}
